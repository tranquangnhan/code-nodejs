extends ../layouts/common.pug

block content
    h1 login
    .col-lg-4
        if errors
            each error in errors
                .alert.alert-danger= error
   
        form(action="/login", method="POST")
            .form-group
                label(for="email") email
                input#email.form-control(type="text" name="email" id="email" value= values ?
                values.email : "")
                label(for="password") phone
                input#password.form-control(type="password" name="password" id="password" value= values ?
                values.password : "")
                button.btn.btn-primary.mt-2 login