extends ../layouts/common.pug

block content
    h1 Login
    .col-lg-4
        if errors
            each error in errors
                .alert.alert-danger= error
   
        form( method="POST")
            .form-group
                label(for="email") email
                input.form-control(type="text" name="email" value= values ?
                values.email : "")
                label(for="password") password
                input.form-control(type="password" name="password" value= values ?
                values.password : "")
                button.btn.btn-primary.mt-2 login
