extends ../layouts/common.pug

block content
    h1 post method
    .col-lg-4
        if errors
            each error in errors
                .alert.alert-danger= error
   
        form(action="/user/post", method="POST")
            .form-group
                label(for="name") name
                input.form-control(type="text" name="name" id="name" value= values ?
                values.name : "")
                label(for="name") phone
                input.form-control(type="text" name="phone" id="phone" value= values ?
                values.phone : "")
                button.btn.btn-primary.mt-2 create

    