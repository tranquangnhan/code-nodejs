extends ../layouts/common

block content
    h1 user
        a.ml-2.btn.btn-primary(href="/user/post") new

    .d-flex.align-items-center
        
        form.ml-auto(action="/user/search",methor="GET")
            input(type="text" name='q')
            button.btn.btn-primary.ml-2 Search
    table.table
        tr  
            th Avatar
            th Name
            th Phone
            th Actions
        each us in user    
            tr  
                td
                    img(src= us.avatar,width="64")
                td= us.name
                td= us.phone
                td
                    a.btn.btn-light(href="/user/"+ us.id) view